@model IEnumerable<MediaCollection.Models.PodcastModels.PodcastIndexViewModel>

<h3><em>Podcasts</em></h3>

@if (Model == null || !Model.Any())
{
    <p><em>You haven't made any playlists</em></p>
}
else
{
    <table>
        <thead>
            <tr>
                <th colspan="2">Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="Podcast"
                           asp-action="Detail"
                           asp-route-id="@item.Id"
                           class="btn btn-primary">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}