@model IEnumerable<MusicIndexViewModel>
@inject SignInManager<MediaCollection.Domain.MediaCollectionUser> signInManager

<h2>Music</h2>
@if (Model == null || !Model.Any())
{
    <p><em>No music available.</em></p>
}
else
{
    <table cellpadding="5">
        <thead>
            <tr>
                <th>Title</th>
                <th>Album</th>
                <th>Band</th>
                <th>Release Date</th>
                <th colspan="3">Duration</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Music"
                           asp-action="Detail"
                           asp-route-id="@item.Id">@item.SongTitle</a>
                    </td>
                    <td>@item.AlbumTitle</td>
                    <td>@item.BandName</td>
                    <td>@(item.ReleaseDate?.ToShortDateString() ?? "No release date added")</td>
                    <td>@item.Duration</td>
                    <td>
                        @if (signInManager.IsSignedIn(User))
                        {
                            <a asp-controller="Music"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-secondary">Edit</a>
                            <a asp-controller="Music"
                               asp-action="Delete"
                               asp-route-id="@item.Id"
                               class="btn btn-secondary">Delete</a>
                            <div class="dropdown">
                                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                    Add to playlist
                                </button>
                                <div class="dropdown-menu">
                                    @foreach (var pl in item.PlayLists)
                                    {
                                        <a class="dropdown-item"
                                           asp-controller="Music"
                                           asp-action="AddSongToPlayList"
                                           asp-route-songId="@item.Id"
                                           asp-route-playlistId="@pl.Id">@pl.Name</a>
                                    }
                                </div>
                            </div>  
                        }
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="Music"
                               asp-action="Hide"
                               class="btn btn-secondary">Hide</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="Music"
   asp-action="Create"
   class="btn btn-primary">Add Song</a>